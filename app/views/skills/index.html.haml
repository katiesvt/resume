.container
  .row
    .col-md-12
      %h1 Listing skills

      %table.table.table-condensed.table-striped
        %thead
          %th Title
          %th Rating
          %th
          %th
          %th

        - @skills.each do |skill|
          %tr
            %td= skill.title
            %td= skill.rating
            %td= link_to 'Show', skill
            %td= link_to 'Edit', edit_skill_path(skill)
            %td= link_to 'Destroy', skill, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br

      = link_to 'New Skill', new_skill_path
